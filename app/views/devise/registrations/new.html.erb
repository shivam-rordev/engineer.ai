<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :Last_name %>
        <%= f.text_field :last, autofocus: true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control',required: true %>
      </div>
      <%if (available_codes.count > 0) %>
        <div class="form-group">
          <%= f.label :select_code %>
          <%= f.select :secret_code, options_for_select(available_codes), class: 'form-control' %>
        </div>
      <%else%>
        <div class="form-group">
          <%= f.label :code %>
          <%= f.text_field :secret_code, class: 'form-control',required: true, placeholder: "example like 'foobar'" %>
        </div>
      <%end%>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
